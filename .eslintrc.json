{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "stylelint-config-standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": ["stylelint-scss", "stylelint-csstree-validator"],
    "rules": {
        "at-rule-no-unknown": null,
        "scss/at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind",
              "apply",
              "variants",
              "responsive",
              "screen"
            ]
          }
        ]
    },
    "csstree/validator": true,
    "ignoreFiles": ["build/**", "dist/**", "**/reset*.css", "**/bootstrap*.css"]
}